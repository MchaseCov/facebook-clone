<div class="infobar-parent">
<% if user_signed_in?%>
<div class="notif-icons">
  <div class="icon interactive">
    <%= link_to root_path do %>
      <span class="material-icons notification-icon">group_add</span>
    <% end %>
  </div>
  <div class="icon interactive">
    <%= link_to conversations_path do %>
      <% if new_messages > 0 %>
      <span class="notification-number"><%= new_messages %></span>
      <style>#unread-icon{color: var(--white);
      background-color: var(--blue);
      border-radius: 50%;}</style>
      <% end %>
      <span class="material-icons notification-icon" id="unread-icon">textsms</span>
    <% end %>
  </div>
  <div class="icon interactive">
    <%= link_to root_path do %>
      <span class="material-icons notification-icon">notifications</span>
    <% end %>
  </div>
</div>
<% else %>
<%= link_to "Sign Up", new_user_registration_path %>
<%= link_to "Sign In",  new_user_session_path %>
<% end %>
</div>