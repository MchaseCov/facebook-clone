<% if button_target.creator_id == current_user.id %>
  <%= button_to 'Edit', edit_group_path(button_target), class:"profile-banner-button", method: :get, 'data-turbo-frame': :_top  %>
  <%= button_to 'Delete', group_path(button_target), class:"profile-banner-button", method: :delete, data: {confirm: "Are you sure?"}, 'data-turbo-frame': :_top  %>
<% else %>
  <% if button_target.users.include? current_user %>
    <%= button_to "Leave Group", group_user_update_path(button_target, current_user), class:"profile-banner-button", method: :delete %> 
  <% else %>
    <%= button_to "Join Group", group_user_update_path(button_target, current_user), class:"profile-banner-button", method: :put %>
  <% end %>
<% end %>