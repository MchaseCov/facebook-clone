<% content_for(:title) do %>
  Pending Friend Requests
<% end %>
<% content_for :page_content do %>
  <h1>Here are all ur pending friend requests</h1>
  <% @pending_requests.each do |r|%>
  From:  <%= link_to r.requesting_user.full_name, profile_path(r.requesting_user) %>
  <%= link_to "Accept", accept_friend_request_path(r), method: :post %>
  <br>
  <% end %>
<% end %>