<% content_for(:title) do %>
  Edit <%= resource_name.to_s.humanize %>
<% end %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <label>My Avatar</label> <br>
    <%= image_tag(@user.avatar.thumb.url,  style:"color:white") if @user.avatar? %> <br>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <hr class="rounded">
  <div class="field">
    <label>My Banner</label> <br>
    <%= image_tag(@user.banner.thumb.url) if @user.banner? %> <br>
    <%= f.file_field :banner %>
    <%= f.hidden_field :banner_cache %>
  </div>
  <hr class="rounded">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <hr class="rounded">
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
    <%= f.label "Full Name:" %><br />
    <%= f.text_field :name %>
  </div>
  <hr class="rounded">
  <div class="field">
    <%= f.label :nick_name %><br />
    <%= f.text_field :nick_name %>
  </div>
  <hr class="rounded">
  <% if current_user.provider.nil? %>
    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <hr class="rounded">
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <hr class="rounded">
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <hr class="rounded">
  <% else %>
    <p>Since you signed up with <%=current_user.provider.titleize%>, you don't need to provide your password to edit your settings.</p>
  <% end %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
  <hr class="rounded">
<% end %>
<h3>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
<hr class="rounded">
<%= link_to "Back", :back %>
